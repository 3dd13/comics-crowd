<section id="<%= section_name %>-section" class="user-comic-list-sections">
<h3><%= section_title %></h3>

<% user_comic_lists.each_with_index do |list, index| %>
  <div id="<%= section_name %>-<%= index %>" class="<%= section_name %>-comic-lists user-comic-lists">
    <div class="list-index"><%= index + 1 %>.</div>
    <div class="list-user-username">
    <%= link_to list.user.username, user_comic_list_url(:user_name => list.user.username) if list.user.username %> 
    </div>
    <div class="list-rating-count">(<%= list.count %>)</div>
  </div>
<% end %>

</section>