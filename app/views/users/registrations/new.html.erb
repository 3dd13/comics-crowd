<h2><%= I18n.t('user.link.signup') %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username, I18n.t('users.username') %><br />
  <%= f.text_field :username, :maxlength => 10 %></p>
  
  <p><%= f.label :email, I18n.t('users.email') %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password, I18n.t('users.password') %><br />
  <%= f.password_field :password %></p>

  <p><%= f.submit I18n.t('user.link.signup') %></p>
<% end %>

